
<% @cart.each do |item, quantity| %>
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <img src="http://placehold.it/320x150" alt="">
            <div class="caption">
                <h4 class="pull-right">$<%= (item.price) %></h4>
                <h4><a href="/item/<%= item.id %>"><%= item.name %></a>
                </h4>
                <p><%= item.description %></p>
            </div>
        </div>
    </div>
<% end %>
